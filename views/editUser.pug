extends layout.pug
block body
  if user != undefined
    h1= "Edit profilo di " + user.nickname
    form.form-signin(method='POST' action="/editUser")
        img.mb-4(src='img/bootstrap.svg' alt='' width='72' height='72')
        label.sr-only(for='inputName') Full Name
        input#inputName.form-control(type='text', value=user.nickname, name="nickname", placeholder='Full Name' autofocus)
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(type='email', value=user.email, name="email", placeholder='Email address' autofocus)
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(type='password', value=user.password, name="pass1", placeholder='Password')
        label.sr-only(for='inputPasswordRetype') Retype password
        input#inputPasswordRetype.form-control(type='password', value=user.password, name="pass2", placeholder='Retype password')
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Save