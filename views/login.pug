extends layout.pug
block append styles
  link(href='signin.css' rel='stylesheet')
block nav

block body
  form.form-signin(method='POST' action="/login")
    img.mb-4(src='img/bootstrap.svg' alt='' width='72' height='72')
    h1.h3.mb-3.font-weight-normal Please sign in
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email', name="email", placeholder='Email address' required autofocus)
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', name="pass", placeholder='Password' required)
    .checkbox.mb-3
      label
        input(type='checkbox' value='remember-me')
        |  Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
    a.btn.btn-lg.btn-primary.btn-block(href='/registration' role='button') Signup
    p.mt-5.mb-3.text-muted &copy; 2017-2018